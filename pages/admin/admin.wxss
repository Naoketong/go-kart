page{
	background:rgba(244,245,246,1);
	width: 100%;
	height: 100%;
}
.page-container{
	width:750rpx;
	/*background:rgba(244,245,246,1);*/
	padding-top: 20rpx;
}
.main-content{
	width: 100%;
}
.banner-section{
	width: 100%;
	background-color: #fff;
	padding:96rpx 0 96rpx 30rpx;
}
.banner-img{
	width: 100rpx;
	height: 100rpx;
	vertical-align: top;
}
.banner-title{
	display: inline-block;
	margin-left: 32rpx;
}
.banner-subhead{
	font-size:40rpx;
	font-family:NotoSansCJKsc-Medium;
	font-weight:600;
	color:rgba(45,44,44,1);
	line-height:59rpx;
}
.banner-subhead-info{
	display: inline-block;
	width:96rpx;
	height:40rpx;
	background:rgba(255,111,32,0.1);
	border-radius:4rpx;
	font-size:24rpx;
	text-align: center;
	font-family:NotoSansCJKsc-Regular;
	font-weight:400;
	color:rgba(255,111,32,1);
	line-height:40rpx;
	margin-left: 20rpx;
	vertical-align: middle;
}
.banner-text{
	font-size: 28rpx;
	font-family:NotoSansCJKsc-Regular;
	font-weight:400;
	color:rgba(85,83,81,1);
	line-height:41rpx;

}
.manage-list{
	margin-top:16rpx;
	width: 100%;
	background-color: #fff;
}
.manage-item{
	position: relative;
	width: 100%;
	height: 104rpx;
	padding-left:27rpx;
}
.manage-item:before{
	content: '';
	position: absolute;
	right: 0rpx;
	bottom: 1rpx;
	display: inline-block;
	width: 84%;
	height: 1rpx;
	background-color:rgba(238,238,238,1);
}
.manage-item:last-child:before{
	display: none;
}
.manage-icon{
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	display: inline-block;
	margin-right: 32rpx;
	width: 56rpx;
	height: 56rpx; 
	text-align: center;
}
.manage-icons{
	display: inline-block;
	width: 56rpx;
	height: 56rpx; 
}
.manage-teext{
	display: inline-block;
	font-size:32rpx;
	font-family:NotoSansCJKsc-Regular;
	font-weight:400;
	color:rgba(45,44,44,1);
	line-height:104rpx;
	vertical-align: top;
	margin-left: 88rpx;
}
.manage-goto{
	display: inline-block;
	vertical-align: top;
	float: right;
	margin-top: 33rpx;
}
.manage-goto-icon{
	position: absolute;
	display: inline-block;
	right: 48rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 40rpx;
	height: 40rpx; 
}
.footer-section{
	display: flex;
	align-items: flex-end;
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 98rpx;
	background:rgba(45,45,45,1);
	font-size: 0;
}
.footer-item{
	position: relative;
	display: inline-block;
	width: 50%;
	font-size:30rpx;
	line-height: 98rpx;
	font-family:PingFangSC-Medium;
	font-weight:500;
	color:rgba(255,255,255,1);
  text-align: center;
  cursor: pointer;
}
.footer-item.active{
	color:rgba(255,111,32,1);
}
.footer-item.active:before{
	content: '';
	position: absolute;
	bottom: 0rpx;
	left:50%;
	transform: translateX(-50%);
	width: 102rpx;
	height: 6rpx;
	background-color:rgba(255,111,32,1)
}